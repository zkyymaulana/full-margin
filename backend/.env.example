# Server
PORT=8000
NODE_ENV=development
CORS_ORIGIN=*

# API Configuration
COINBASE_API_URL=https://api.exchange.coinbase.com
API_TIMEOUT=30000

# Cache
ENABLE_CACHING=true
CACHE_TTL=1800000   # 30 menit

# Security
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Scheduler Configuration
SCHEDULER_TIMEZONE=Asia/Jakarta
SCHEDULER_AUTO_START=true

# Candle Data Configuration
CANDLE_HOUR_SEC=3600
COINBASE_BATCH_SIZE=300
COINBASE_BATCH_DELAY_MS=400
COINBASE_RETRY_DELAY_MS=5000
COINBASE_TIMEOUT_MS=15000

# Performance Optimization
INDICATORS_CONCURRENCY_LIMIT=3
SYMBOLS_CACHE_TTL=300000    # 5 menit
MEMORY_THRESHOLD_MB=500

# Telegram Notification Configuration
TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN=your_bot_token_here
# Note: TELEGRAM_CHAT_ID is deprecated - use per-user telegramChatId in database
# SIGNAL_MODE is deprecated - system now uses multi-indicator only
